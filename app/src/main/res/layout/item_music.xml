<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_music">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_music"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/music_player_icon"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundRectangleImageView"
        />
    <TextView
        android:id="@+id/txt_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_music"
        android:text="@string/song_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_singer"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/txt_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_song_name"
        app:layout_constraintStart_toEndOf="@id/img_music"
        android:text="@string/singer"
        android:maxLines="1"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>